@using ControleDeGastos.ApplicationCore.Entities

@model List<Category>

@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";

}


<div class="row mb-2">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Categories</h5>
                <a href="@(Url.Action("AddOrEdit","Categories"))" class="btn btn-primary mr-2">Add New</a>
                <div class="table-responsive">
                    <div class="alert alert-danger div-alert alert-dismissible fade show mt-2" role="alert" hidden>
                        <strong>Erro!</strong> <span class="spanErro"></span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <div class="alert alert-success div-alert-success alert-dismissible fade show mt-2" role="alert" hidden>
                        <strong>Success!</strong> Category deleted!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <table class="table center-aligned-table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Category</th>
                                <th scope="col">Type</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var c in Model)
                                {
                                    <tr>
                                        <th scope="row">@c.Id</th>
                                        <td>@c.Description</td>
                                        <td>@(TypeTransactionConstant.GetDescription(c.Type))</td>
                                        <td>
                                            <a href="@(Url.Action("AddOrEdit","Categories", new { id=c.Id }))" class="btn btn-primary btn-sm">Edit</a>
                                            <a href="#" data-url="@(Url.Action("Delete","Categories", new {id=c.Id}))" class="btn btn-danger btn-remove btn-sm">Remove</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



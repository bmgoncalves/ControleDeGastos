@using ControleDeGastos.ApplicationCore.Entities
@model Category
@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";


}

<h3 class="page-heading mb-4">Category</h3>
<div class="row mb-2">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Information</h5>
                <div asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Categories" asp-action="AddOrEdit" method="post">
                    <input asp-for="Id" class="form-control p-input" hidden readonly>

                    <div class="row">
                        <div class="form-group col-md-3">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control p-input">
                        </div>
                    </div>

                    <div class="row">

                        <div class="form-group col-md-3">
                            <label asp-for="Type"></label>
                            <input asp-for="Type" class="form-control p-input">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="@(Url.Action("Index","Categories"))" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


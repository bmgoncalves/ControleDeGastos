@using ControleDeGastos.ApplicationCore.Entities
@model Category
@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";


}

<h3 class="page-heading mb-4">Category</h3>
<div class="row mb-2">
    <div class="col-lg-6">

        <div class="card">
            <div class="card-header">
                <h5>Information</h5>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Categories" asp-action="AddOrEdit" method="post">
                    <input asp-for="Id" class="form-control" value="@(Model != null ? Model.Id:0)" hidden readonly>
                    <div class="form-group">
                        <label asp-for="Description" class="col-form-label"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="col-form-label"></label>
                        <select asp-for="Type" class="form-select mb-3" aria-label="Type">
                            <option selected>Select Type</option>
                            @for (int i = 1; i <= TypeTransactionConstant.GetCountItems(); i++)
                            {
                                <option value="@i">@TypeTransactionConstant.GetDescription(i)</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="@(Url.Action("Index","Categories"))" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>



    </div>
</div>

